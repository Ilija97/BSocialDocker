{
  "compilerOptions": {
    "target": "es2018",                 
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["mocha", "node"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "resolveJsonModule": true,            
  "esModuleInterop": true,              
  "skipLibCheck": true                  
}

  